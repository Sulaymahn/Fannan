@model bool?
@{
    ViewData["Title"] = "Home Page";
    Layout = "_Layout";
}

<header class="p-3">
    <div class="container">
        <div class="d-flex flex-wrap align-items-center justify-content-between">
            <img src="/images/fanna_logo.png" height="32px"/>

            @if(Model == true)
            {
                <a href="/Feed" class="btn btn-primary">Go</a>
            }
            else
            {
                
            <div class="text-end">
                <a href="/auth/login" class="btn btn-outline-light me-2">Login</a>
                <a href="/auth/signup" class="btn btn-info">Sign-up</a>
            </div>
            }
        </div>
    </div>
</header>

<main>

    <div id="myCarousel" class="carousel slide mb-6" data-bs-ride="carousel">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#myCarousel" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#myCarousel" data-bs-slide-to="1" aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#myCarousel" data-bs-slide-to="2" aria-label="Slide 3"></button>
        </div>
        <div class="carousel-inner">
            <div class="carousel-item active">

                <img src="https://images.unsplash.com/photo-1560785218-b81145a78602?q=80&w=1470&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" class="featurette-image img-fluid mx-auto" alt="Responsive image" width="100%" height="100%" preserveAspectRatio="xMidYMid slice" focusable="false">
                <div class="container">
                    <div class="carousel-caption text-start text-white">
                        <h1>Fannan</h1>
                        <p class="opacity-75">Welcome To Fannan!</p>

                    </div>
                </div>
            </div>
            <div class="carousel-item">
                <img src="/images/three.jpg" class="featurette-image img-fluid mx-auto" alt="Responsive image" width="100%" height="100%" preserveAspectRatio="xMidYMid slice" focusable="false">
                <div class="container">
                    <div class="carousel-caption text-white">
                        <h1>Join Our Musical Family Today !</h1>
                    </div>
                </div>
            </div>
            <div class="carousel-item">
                <img src="/images/hoba.jpg" class="featurette-image img-fluid mx-auto" alt="Responsive image" width="100%" height="100%" preserveAspectRatio="xMidYMid slice" focusable="false">
                <div class="container">
                    <div class="carousel-caption text-end text-white">
                        <h1>Make new friends</h1>
                        <p>Meet People From All Around Morocco</p>

                    </div>
                </div>
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#myCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#myCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>

    <div class="container marketing">
        <div id="first">
            <hr class="featurette-divider">

            <div class="row featurette">
                <div class="col-md-7">
                    <h2 class="featurette-heading fw-normal lh-1">Connect with Fellow Musicians</h2><h3><div class="text-body-secondary">Collaborate, Create, and Share Your Passion</div></h3>
                    <p class="lead">
                        Are you looking to expand your musical network? Our website offers a vibrant community where musicians
                        like you can connect, collaborate on projects, and share your latest works. Whether you're a guitarist, vocalist, or a producer,
                        finding your next musical partner is just a click away. Join us to explore a world of musical possibilities!
                    </p>
                </div>
                <div class="col-md-5">
                    <img src="/images/test.jpg" class="featurette-image img-fluid mx-auto" alt="Responsive image" width="500" height="500" preserveAspectRatio="xMidYMid slice" focusable="false">
                </div>
            </div>
        </div>

        <hr class="featurette-divider">

        <div class="row featurette">
            <div class="col-md-7 order-md-2">
                <h2 class="featurette-heading fw-normal lh-1">Connect with Fellow Musicians</h2><h3><div class="text-body-secondary">Collaborate, Create, and Share Your Passion</div></h3>
                <p class="lead">
                    Are you looking to expand your musical network? Our website offers a vibrant community where musicians
                    like you can connect, collaborate on projects, and share your latest works. Whether you're a guitarist, vocalist, or a producer,
                    finding your next musical partner is just a click away. Join us to explore a world of musical possibilities!
                </p>
            </div>
            <div class="col-md-5 order-md-1">
                <img src="/images/three.jpg" class="featurette-image img-fluid mx-auto" alt="Responsive image" width="500" height="500" preserveAspectRatio="xMidYMid slice" focusable="false">

            </div>
        </div>

        <hr class="featurette-divider">

        <div class="row featurette">
            <div class="col-md-7">
                <h2 class="featurette-heading fw-normal lh-1">Showcase Your Talent</h2><h3><div class="text-body-secondary">Post Your Music, Get Feedback, and Grow Together</div></h3>
                <p class="lead">
                    Ready to share your music with an enthusiastic audience? Our platform provides the perfect stage for you
                    to post your tracks, albums, or demos. Receive constructive feedback from fellow musicians who understand your craft. Together,
                    we can elevate each other's talents and take our music to new heights. Start posting today and watch your fan base grow!
                </p>
            </div>
            <div class="col-md-5">
                <img src="/images/two.jpg" class="featurette-image img-fluid mx-auto" alt="Responsive image" width="500" height="500" preserveAspectRatio="xMidYMid slice" focusable="false">
            </div>
        </div>

        <hr class="featurette-divider">
        <div class="row">
            <div class="col-lg-4">
                <img src="https://randomuser.me/api/portraits/lego/5.jpg" class="rounded-circle" style="height: 140px; width:140px;" />
                <h2 class="fw-normal">Yassir Errouihel</h2>
                <p>infos about him</p>

            </div>
            <div class="col-lg-4">
                <img src="https://randomuser.me/api/portraits/lego/0.jpg" class="rounded-circle" style="height: 140px; width:140px;" />
                <h2 class="fw-normal">Sulaiman Mukhtar</h2>
                <p>I play chess</p>
            </div>
            <div class="col-lg-4">
                <img src="https://randomuser.me/api/portraits/lego/2.jpg" class="rounded-circle" style="height: 140px; width:140px;" />
                <h2 class="fw-normal">Ahmed Alyousse</h2>
                <p>infos about him</p>
            </div>
        </div>
    </div>
</main>