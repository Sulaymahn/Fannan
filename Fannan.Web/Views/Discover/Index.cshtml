@model List<Fannan.Web.Entities.User>

<p class="fw-bold h4">Discover</p>
<form action="/Discover" method="get" class="mb-3">
    <input type="text" class="form-control" placeholder="Search" name="search" value="@ViewBag.Search"/>
</form>

@if (Model.Count > 0)
{
    <div class="list-group">
        @foreach (var user in Model)
        {
            <a href="/Profile/@user.Username" class="list-group-item list-group-item-action">@user.Username</a>
        }
    </div>
}