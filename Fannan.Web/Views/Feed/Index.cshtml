@using Fannan.Web.Entities
@using Humanizer
@model List<Post>
@{
    Layout = null;
    string navHeight = "64px";
}

<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Fannan.Web</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Fannan.Web.styles.css" asp-append-version="true" />
</head>
<body style="margin: 0px; width: 100vw; height: 100vh;">
    <nav class="row bg-primary" style="height: @navHeight; margin: 0px;">

    </nav>
    <section class="container-fluid row" style="margin: 0px; height: calc(100vh - @navHeight);">
        <div class="col">
        </div>
        <main class="col-6 overflow-auto">
            <div class="my-3">
                <form method="get" class="form">
                    <input type="text" name="post" class="form-control" placeholder="What's on your mind?" />
                </form>
            </div>
            @foreach (var post in Model)
            {
                <div class="my-3 bg-gradient" style="padding: 20px;">
                    <div class="row">
                        <p class="col fw-bold m-0">@post.User?.Username</p>
                        <p class="col text-end">@post.Date.Humanize()</p>
                    </div>
                    @if (!string.IsNullOrEmpty(post.Text))
                    {
                        <div class="row">
                            <p class="col">@post.Text</p>
                        </div>
                    }

                    @if (post.Media != null)
                    {
                        if (post.Media.ContentType == "image/png")
                        {
                            <img src="@($"api/medias/{post.MediaId}")" style="width: 100%;" />
                        }
                    }

                    <div class="row mt-3 d-flex">
                        <p class="col"><i class="fa-solid fa-heart"></i> @post.Likes.Count</p>
                        <p class="col"><i class="fa-solid fa-comment"></i> @(post.Comments.Count + post.Comments.SelectMany(c => c.Replies).Count())</p>
                    </div>
                    <form method="get" class="form">
                        <input type="text" name="comment" class="form-control" placeholder="Write your comment" />
                    </form>
                    <hr />
                    @{
                        var fCom = post.Comments.FirstOrDefault();
                    }
                    @if(fCom != null){
                        <div>
                            <p class="fw-bold m-0">@fCom.User.FirstName</p>
                            <p>@fCom.Content</p>
                        </div>
                    }
                </div>
            }
        </main>
        <div class="col">
        </div>
    </section>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="https://kit.fontawesome.com/8d710ea6d3.js" crossorigin="anonymous"></script>
</body>
</html>
