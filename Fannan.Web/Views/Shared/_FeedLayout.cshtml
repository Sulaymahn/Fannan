<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Feed - Fannan.Web</title>
    <link rel="icon" type="image/png" href="/favicon.png">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Fannan.Web.styles.css" asp-append-version="true" />
</head>
<body style="margin: 0px; width: 100vw; height: 100vh;">
    <nav class="row" style="height: 64px; margin: 0px;">
        <img src="/images/fanna_logo.png" style="height: 32px; width: auto; margin: auto;">
    </nav>
    <div class="container">
        <section class="row" style="margin: 0px; height: calc(100vh - 64px);">
            <div class="col">
                <div class="d-flex flex-column flex-shrink-0 p-3">
                    <ul class="nav nav-pills flex-column mb-auto">
                        <li class="nav-item my-2">
                            <a href="/Feed" class="nav-link @(ViewBag.CurrentUrl == "/Feed" ? "active" : "text-white")">
                                <i class="fa-solid fa-home me-2" width="16" height="16"></i>
                                Home
                            </a>
                        </li>
                        <li class="nav-item my-2">
                            <a href="/Friends" class="nav-link @(ViewBag.CurrentUrl == "/Friends" ? "active" : "text-white")">
                                <i class="fa-solid fa-user-group me-2" width="16" height="16"></i>
                                Friends
                            </a>
                        </li>
                        <li class="nav-item my-2">
                            <a href="/Discover" class="nav-link @(ViewBag.CurrentUrl == "/Discover" ? "active" : "text-white")">
                                <i class="fa-solid fa-magnifying-glass me-2" width="16" height="16"></i>
                                Discover
                            </a>
                        </li>
                        <li class="nav-item my-2">
                            <a href="/Profile/@ViewBag.Username" class="nav-link @(ViewBag.CurrentUrl == "/Profile" ? "active" : "text-white")">
                                <i class="fa-solid fa-user me-2" width="16" height="16"></i>
                                Profile
                            </a>
                        </li>
                    </ul>
                    <hr>
                    <div class="dropdown">
                        <a href="#" class="d-flex align-items-center text-white text-decoration-none dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                            <img src="/api/medias/@ViewBag.ProfilePicture" alt="" width="32" height="32" class="rounded-circle me-2">
                            <strong>@ViewBag.Username</strong>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-dark text-small shadow">
                            <li><a class="dropdown-item" href="/auth/logout">Sign out</a></li>
                        </ul>
                    </div>
                </div>

            </div>
            <main class="col-md-6">
                @RenderBody()
            </main>
            <div class="col">
                @await RenderSectionAsync("sidebar", required: false)
            </div>
        </section>
    </div>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="https://kit.fontawesome.com/8d710ea6d3.js" crossorigin="anonymous"></script>
</body>
</html>

